<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.CheckBox?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<HBox spacing="0" styleClass="panel-base"
      xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.dam2.adp.ecorastro.controller.HistorialHuellasController">

    <VBox spacing="20.0" styleClass="sidebar-container" minWidth="280" maxWidth="320">
        <padding>
            <Insets top="30" right="20" bottom="30" left="30"/>
        </padding>

        <Label text="Gestión de Datos" styleClass="titulo, texto-grande-20"/>
        <Label text="Opciones disponibles" styleClass="subtitulo-seccion"/>

        <HBox styleClass="card-nav, nav-huella" onMouseClicked="#irARegistrar" alignment="CENTER_LEFT" spacing="15">
            <FontIcon iconLiteral="fas-plus" iconSize="20" styleClass="icono-navegacion, texto-negrita"/>

            <VBox>
                <Label text="Nueva Huella" styleClass="card-nav-titulo"/>
                <Label text="Añadir registro" styleClass="card-nav-desc"/>
            </VBox>
        </HBox>

        <Separator styleClass="separador-suave"/>

        <VBox spacing="8">
            <CheckBox fx:id="chkTransporte" text="Transporte" selected="true"
                      onAction="#cargarHuellas" styleClass="filtro-checkbox"
                      maxWidth="Infinity">
                <graphic>
                    <FontIcon iconLiteral="fas-car" iconSize="14" styleClass="icono-navegacion"/>
                </graphic>
            </CheckBox>

            <CheckBox fx:id="chkAlimentacion" text="Alimentación" selected="true"
                      onAction="#cargarHuellas" styleClass="filtro-checkbox"
                      maxWidth="Infinity">
                <graphic>
                    <FontIcon iconLiteral="fas-apple-alt" iconSize="14" styleClass="icono-navegacion"/>
                </graphic>
            </CheckBox>

            <CheckBox fx:id="chkEnergia" text="Energía" selected="true"
                      onAction="#cargarHuellas" styleClass="filtro-checkbox"
                      maxWidth="Infinity">
                <graphic>
                    <FontIcon iconLiteral="fas-bolt" iconSize="14" styleClass="icono-navegacion"/>
                </graphic>
            </CheckBox>

            <CheckBox fx:id="chkAgua" text="Agua" selected="true"
                      onAction="#cargarHuellas" styleClass="filtro-checkbox"
                      maxWidth="Infinity">
                <graphic>
                    <FontIcon iconLiteral="fas-tint" iconSize="14" styleClass="icono-navegacion"/>
                </graphic>
            </CheckBox>
            <CheckBox fx:id="chkOtros" text="Otros" selected="true" onAction="#cargarHuellas" styleClass="filtro-checkbox" maxWidth="Infinity">
                <graphic> <FontIcon iconLiteral="fas-box-open" iconSize="14" styleClass="icono-navegacion"/> </graphic>
            </CheckBox>
        </VBox>

        <VBox styleClass="card-azul" spacing="5">
            <HBox spacing="10" alignment="CENTER_LEFT">
                <FontIcon iconLiteral="fas-info-circle" iconSize="18" styleClass="texto-tip"/>
                <Label text="INFO" styleClass="titulo-tip, texto-mediano-plus"/>
            </HBox>
            <Label text="Haz clic en una tarjeta para ver detalles o editarla."
                   wrapText="true" styleClass="texto-tip, texto-pequeno"/>
        </VBox>

    </VBox>

    <VBox spacing="20" HBox.hgrow="ALWAYS">
        <padding>
            <Insets top="30" right="30" bottom="30" left="10"/>
        </padding>

        <VBox>
            <Label text="Mis Huellas" styleClass="titulo"/>
            <Label text="Historial visual de tus registros" styleClass="subtitulo"/>
        </VBox>

        <ScrollPane fitToWidth="true" fitToHeight="true" VBox.vgrow="ALWAYS" styleClass="scroll-transparente">
            <content>
                <FlowPane fx:id="contenedorHuellas" hgap="20" vgap="20"
                          styleClass="panel-base"
                          alignment="TOP_LEFT">
                    <padding>
                        <Insets top="10" right="20" bottom="20" left="5"/>
                    </padding>
                </FlowPane>
            </content>
        </ScrollPane>

    </VBox>
</HBox>