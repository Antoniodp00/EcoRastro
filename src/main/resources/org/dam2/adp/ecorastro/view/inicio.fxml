<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<ScrollPane fitToWidth="true" fitToHeight="true"
            xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.dam2.adp.ecorastro.controller.InicioController"
            styleClass="scroll-transparente">

    <content>
        <HBox spacing="30.0" styleClass="panel-base">
            <padding> <Insets top="30" right="30" bottom="30" left="30"/> </padding>

            <VBox spacing="20.0" styleClass="sidebar-container">

                <VBox styleClass="card" spacing="5">
                    <Label text="TOTAL EMISIONES" styleClass="card-titulo"/>
                    <HBox alignment="CENTER_LEFT" spacing="10">
                        <Label fx:id="lblHuellaTotal" text="0.00 kg" styleClass="card-numero-destacado"/>
                    </HBox>
                </VBox>

                <VBox styleClass="card" spacing="10">
                    <HBox spacing="15" alignment="CENTER_LEFT">
                        <FontIcon fx:id="iconNivel" iconLiteral="fas-seedling" iconSize="40" styleClass="icono-nivel"/>

                        <VBox spacing="2">
                            <Label text="NIVEL ACTUAL" styleClass="card-titulo"/>
                            <Label fx:id="lblNivel" text="Calculando..." styleClass="card-numero, texto-grande-20"/>
                        </VBox>
                    </HBox>

                    <VBox spacing="5">
                        <Label fx:id="lblSiguienteNivel" text="Objetivo: ..." styleClass="subtitulo, texto-pequeno"/>
                        <ProgressBar fx:id="pbNivel" progress="0.0" maxWidth="Infinity" styleClass="barra-progreso"/>
                        <Label fx:id="lblAhorroRestante" text="..." styleClass="texto-progreso" alignment="CENTER_RIGHT" maxWidth="Infinity"/>
                    </VBox>
                </VBox>

                <VBox spacing="15">
                    <Label text="Acciones Rápidas" styleClass="subtitulo-seccion"/>

                    <HBox styleClass="card-nav, nav-huella" onMouseClicked="#irARegistrarHuella" alignment="CENTER_LEFT" spacing="15">
                        <FontIcon iconLiteral="fas-shoe-prints" iconSize="20" styleClass="icono-navegacion"/>
                        <VBox>
                            <Label text="Registrar Huella" styleClass="card-nav-titulo"/>
                            <Label text="Añade consumo..." styleClass="card-nav-desc"/>
                        </VBox>
                    </HBox>

                    <HBox styleClass="card-nav, nav-habitos" onMouseClicked="#irAHabitos" alignment="CENTER_LEFT" spacing="15">
                        <FontIcon iconLiteral="fas-calendar-check" iconSize="20" styleClass="icono-navegacion"/>
                        <VBox>
                            <Label text="Mis Hábitos" styleClass="card-nav-titulo"/>
                            <Label text="Gestiona tus rutinas" styleClass="card-nav-desc"/>
                        </VBox>
                    </HBox>

                    <HBox styleClass="card-nav, nav-analisis" onMouseClicked="#irAAnalisis" alignment="CENTER_LEFT" spacing="15">
                        <FontIcon iconLiteral="fas-chart-pie" iconSize="20" styleClass="icono-navegacion"/>
                        <VBox>
                            <Label text="Ver Análisis" styleClass="card-nav-titulo"/>
                            <Label text="Estadísticas detalladas" styleClass="card-nav-desc"/>
                        </VBox>
                    </HBox>
                </VBox>

                <HBox styleClass="card-azul" alignment="CENTER_LEFT" spacing="15">
                    <FontIcon iconLiteral="fas-lightbulb" iconSize="28" styleClass="icono-tip"/>
                    <VBox>
                        <Label text="CONSEJO DEL DÍA" styleClass="titulo-tip, texto-mediano"/>
                        <Label fx:id="lblConsejo" text="Cargando consejo..." wrapText="true" styleClass="texto-tip, texto-pequeno"/>
                    </VBox>
                </HBox>

            </VBox>

            <VBox spacing="20" HBox.hgrow="ALWAYS">
                <VBox>
                    <Label text="Resumen General" styleClass="titulo"/>
                    <Label text="Así va tu impacto comparado con la media" styleClass="subtitulo"/>
                </VBox>

                <VBox styleClass="card" VBox.vgrow="ALWAYS" alignment="TOP_CENTER">
                    <Label text="TU IMPACTO VS COMUNIDAD" styleClass="card-titulo" maxWidth="Infinity" alignment="CENTER_LEFT"/>

                    <StackPane VBox.vgrow="ALWAYS">
                        <BarChart fx:id="barChart" legendSide="BOTTOM" animated="false"
                                  maxWidth="750" categoryGap="20" barGap="5">
                            <xAxis> <CategoryAxis label=""/> </xAxis>
                            <yAxis> <NumberAxis label="kg CO₂"/> </yAxis>
                        </BarChart>
                    </StackPane>
                </VBox>
            </VBox>
        </HBox>
    </content>
</ScrollPane>