                    <TableView fx:id="tablaHabitos" VBox.vgrow="ALWAYS" styleClass="tabla-moderna">
                        <columns>
                            <TableColumn fx:id="colActividad" text="ACTIVIDAD"/>
                            <TableColumn fx:id="colCategoria" text="CATEGORÃA"/>
                            <TableColumn fx:id="colFrecuencia" text="FRECUENCIA"/>
