                        <Label text="Actividad" style="-fx-font-weight: bold; -fx-text-fill: -color-secundario;"/>
                        <ComboBox fx:id="cmbActividad" promptText="Selecciona..." maxWidth="Infinity"/>
                    </VBox>

                    <HBox spacing="10">
                        <VBox spacing="5" HBox.hgrow="ALWAYS">
