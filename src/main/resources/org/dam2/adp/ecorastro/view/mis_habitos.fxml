<ScrollPane fitToWidth="true" fitToHeight="true"
            xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.dam2.adp.ecorastro.controller.MisHabitosController"
